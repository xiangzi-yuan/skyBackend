<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.sky.mapper.DishFlavorMapper">

    <insert id="insertBatch">
        insert into dish_flavor (dish_id, name, value)
        values
        <foreach collection="flavors" item="flavor" separator=",">
            (#{flavor.dishId}, #{flavor.name}, #{flavor.value})
        </foreach>
    </insert>
    <delete id="delete">
        delete from dish_flavor
        <where>
            <if test="dishIds != null and dishIds.size() > 0">
                dish_id in
                <foreach collection="dishIds" item="id" open="(" separator="," close=")">
                    #{id}
                </foreach>
            </if>
            <if test="dishIds == null or dishIds.size() == 0">
                1 = 0
            </if>
        </where>
    </delete>

    <select id="selectByDishIds" resultType="com.sky.entity.DishFlavor">
        select id, dish_id, name, value from dish_flavor
        <where>
            <if test="dishIds != null and dishIds.size() > 0">
                dish_id in
                <foreach collection="dishIds" item="id" open="(" separator="," close=")">
                    #{id}
                </foreach>
            </if>
            <if test="dishIds == null or dishIds.size() == 0">
                1 = 0
            </if>
        </where>
    </select>

</mapper>